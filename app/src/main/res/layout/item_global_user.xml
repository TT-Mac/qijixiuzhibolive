<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="80dp"
    >
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.qiji.live.xiaozhibo.widget.AvatarImageView
            android:layout_centerVertical="true"
            android:id="@+id/item_iv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="45dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:textSize="@dimen/text_size_17"
                    android:id="@+id/item_tv_u_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/item_iv_sex"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_man"
                    android:layout_width="17dp"
                    android:layout_height="17dp"/>
                <ImageView
                    android:id="@+id/item_iv_level"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/leve1"
                    android:layout_width="35dp"
                    android:layout_height="17dp"/>
            </LinearLayout>

            <TextView
                android:singleLine="true"
                android:ellipsize="end"
                android:maxEms="10"
                android:textSize="@dimen/text_size_15"
                android:id="@+id/item_tv_sign"
                android:textColor="@color/light_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/item_iv_att"
            android:src="@drawable/icon_gz"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="55dp"
            android:layout_height="25dp"/>
    </RelativeLayout>

    <View
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
       style="@style/h_line"/>

</RelativeLayout>