<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_user_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color">
    <com.qiji.live.xiaozhibo.ui.customviews.TCActivityTitle
        android:background="@color/white"
        android:id="@+id/view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:titleText="@string/retrieve_password"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_retrieve_pass_phone"
            android:textColorHint="@color/light_gray"
            android:textSize="@dimen/text_size_15"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_login_phone"
            android:padding="15dp"
            android:hint="请输入您的手机号"
            android:background="@color/background_gray2"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <android.support.percent.PercentRelativeLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_retrieve_pass_code"
                android:textColorHint="@color/light_gray"
                android:textSize="@dimen/text_size_15"
                app:layout_widthPercent="75%"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_dun"
                android:padding="15dp"
                android:hint="请输入您收到的验证码"
                android:background="@color/background_gray2"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <TextView
                android:enabled="false"
                android:background="@color/colorGray2"
                android:id="@+id/tv_retrieve_pass_get_code"
                android:gravity="center"
                android:text="获取验证码"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                app:layout_widthPercent="28%"
                android:layout_width="0dp"
                android:layout_height="50dp"/>
        </android.support.percent.PercentRelativeLayout>

        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_retrieve_pass_p1"
            android:textColorHint="@color/light_gray"
            android:textSize="@dimen/text_size_15"
            android:layout_marginTop="10dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_dun"
            android:padding="15dp"
            android:hint="请输入您要重置的密码"
            android:background="@color/background_gray2"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_retrieve_pass_p2"
            android:textColorHint="@color/light_gray"
            android:textSize="@dimen/text_size_15"
            android:layout_marginTop="10dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_dun"
            android:padding="15dp"
            android:hint="请再次输入您要重置的密码"
            android:background="@color/background_gray2"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/btn_retrieve_pass_submit"
            android:background="@color/deep_sky_blue"
            android:textColor="@color/white"
            android:text="确认修改"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>


    </LinearLayout>

</RelativeLayout>
