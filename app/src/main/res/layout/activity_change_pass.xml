<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_change_pass"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.qiji.live.xiaozhibo.ui.customviews.TCActivityTitle
        android:background="@color/white"
        android:id="@+id/view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:titleText="@string/change_pass"

        >

    </com.qiji.live.xiaozhibo.ui.customviews.TCActivityTitle>


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_change_pass1"
            android:textColorHint="@color/light_gray"
            android:textSize="@dimen/text_size_15"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_login_lock"
            android:padding="15dp"
            android:hint="请输入当前密码"
            android:background="@color/background_gray2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_change_pass2"
            android:textColorHint="@color/light_gray"
            android:textSize="@dimen/text_size_15"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_login_lock"
            android:padding="15dp"
            android:hint="请输入您要重置的密码"
            android:background="@color/background_gray2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_change_pass3"
            android:textColorHint="@color/light_gray"
            android:textSize="@dimen/text_size_15"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_login_lock"
            android:padding="15dp"
            android:hint="请再次输入您要重置的密"
            android:background="@color/background_gray2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/btn_user_login"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/deep_sky_blue"
            android:textColor="@color/white"
            android:text="确认修改"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>
    </LinearLayout>




</RelativeLayout>
