<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_marginTop="160dp"
            android:layout_marginRight="20dp"
            android:id="@+id/iv_show_send_gift_lian"
            android:background="@drawable/bg_show_send_gift"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_10"
                    android:text="@string/lian_song"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/tv_show_gift_outtime"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <android.support.v4.view.ViewPager
                android:background="@drawable/bg_gift"
                android:id="@+id/vp_gift_page"
                android:layout_height="200dp"
                android:layout_width="wrap_content">

            </android.support.v4.view.ViewPager>

            <RelativeLayout
                android:background="@drawable/bg_gift_bottom"
                android:id="@+id/rl_show_gift_bottom"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/text_size_15"
                        android:textColor="@color/titanium_yellow"
                        android:text="充值:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="@dimen/space_15"
                        android:id="@+id/tv_show_select_user_coin"
                        android:text="0"
                        android:textColor="@color/titanium_yellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_diamonds"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_right_gift"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/ll_show_view_pager_lua"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">


                </LinearLayout>

                <com.qiji.live.xiaozhibo.widget.ShapeButton
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="发送"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/btn_show_send_gift"
                    app:fillColor="@color/light_gray"
                    android:layout_alignParentRight="true"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    app:radius="50"/>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>