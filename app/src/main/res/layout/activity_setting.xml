<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_setting"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.qiji.live.xiaozhibo.ui.customviews.TCActivityTitle
        android:background="@color/white"
        android:id="@+id/at_eui_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:titleText="@string/setting"
        />
    <com.qiji.live.xiaozhibo.ui.customviews.TCLineControllerView
        app:name="修改密码"
        android:layout_marginTop="10dp"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/btn_setting_login_change_pass"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <com.qiji.live.xiaozhibo.ui.customviews.TCLineControllerView
        app:name="版本检查"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/btn_setting_login_change_check_version"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/btn_setting_login_out"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:text="退出登录"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</LinearLayout>
